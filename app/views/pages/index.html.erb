<% if current_user %>
    <div class="page-header">
      <h1>Hooray! The door has been opened...</h1>
    </div>
    <div class="panel panel-default">
      <div class="panel-body">
        <h3>Oh no, it's not open?</h3>
        <%= link_to 'Open Again', open_again_path, method: :post, :remote => true %>
      </div>
    </div>
<% else %>
    <%= render 'welcome' %>
<% end %>